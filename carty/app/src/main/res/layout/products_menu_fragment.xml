<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e9a6af"
                    android:isScrollContainer="false"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme">

                    <ImageView
                    android:id="@+id/imageMenu"
                    android:layout_width="35dp"
                    android:layout_height="53dp"
                    app:srcCompat="@drawable/ic_menu_open" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Products Menu"

                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                </androidx.appcompat.widget.Toolbar>




            <ImageView
                android:id="@+id/favourites_image"
                android:layout_width="350dp"
                android:layout_height="179dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/fruits" />

            <Button
                android:id="@+id/button"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:background="@drawable/roundedshape"
                android:text="Fruits and Vegtabels"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textView63"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/meat_image"
                android:layout_width="350dp"
                android:layout_height="179dp"
                android:layout_gravity="center"
                android:src="@drawable/meat" />

            <Button
                android:id="@+id/button2"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:background="@drawable/roundedshape"
                android:layout_gravity="center"
                android:text="Meat, Poultry and SeaFood"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView64"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/sweet_image"
                android:layout_width="350dp"
                android:layout_height="179dp"
                android:layout_gravity="center"
                android:src="@drawable/sweet" />

            <Button
                android:id="@+id/add_to_cart"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:background="@drawable/roundedshape"
                android:layout_gravity="center"
                android:text="Bakery and Sweets"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView65"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/cheese_image"
                android:layout_width="350dp"
                android:layout_height="179dp"
                android:layout_gravity="center"
                android:src="@drawable/cheese" />

            <Button
                android:id="@+id/button4"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:background="@drawable/roundedshape"
                android:layout_gravity="center"
                android:text="Cheese and Dairy"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView66"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/frozen_image"
                android:layout_width="350dp"
                android:layout_height="179dp"
                android:layout_gravity="center"
                android:src="@drawable/frozen" />

            <Button
                android:id="@+id/button5"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:background="@drawable/roundedshape"
                android:layout_gravity="center"
                android:text="Frozen Food"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView67"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/clean_image"
                android:layout_width="350dp"
                android:layout_height="179dp"
                android:layout_gravity="center"
                android:src="@drawable/clean" />

            <Button
                android:id="@+id/button6"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:background="@drawable/roundedshape"
                android:layout_gravity="center"
                android:text="Cleaning Needs"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView68"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/rice_image"
                android:layout_width="350dp"
                android:layout_height="179dp"
                android:layout_gravity="center"
                android:src="@drawable/rice" />

            <Button
                android:id="@+id/button7"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:background="@drawable/roundedshape"
                android:layout_gravity="center"
                android:text="Rice, Pasta and Legumes"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView69"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/drinks_image"
                android:layout_width="350dp"
                android:layout_height="179dp"
                android:layout_gravity="center"
                android:src="@drawable/drinks" />

            <Button
                android:id="@+id/button8"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:background="@drawable/roundedshape"
                android:layout_gravity="center"
                android:text="Drinks"
                android:textColor="#000000"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/pinkbutton"
        app:itemTextColor="#000000"
        app:menu="@menu/customer_menu" />


</androidx.drawerlayout.widget.DrawerLayout>